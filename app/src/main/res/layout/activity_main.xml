<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:clickable="false"
    android:longClickable="false"
    android:visibility="visible"
    android:orientation="horizontal"
    android:background="#FFF"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_guideline"
        app:layout_constraintGuide_percent=".01"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_guideline"
        app:layout_constraintGuide_percent=".99"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline"
        app:layout_constraintGuide_percent=".01"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_guideline"
        app:layout_constraintGuide_percent=".99"
        android:orientation="horizontal"/>

    <ImageButton
        android:id="@+id/button_gallery"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline"
        app:layout_constraintHeight_percent=".15"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_guideline"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintWidth_percent=".5"
        app:srcCompat="@drawable/gallery_pic"
        tools:srcCompat="@drawable/gallery_pic" />

    <ImageButton
        android:id="@+id/button_products"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="#FFFFFFFF"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_percent=".2"
        app:layout_constraintHorizontal_bias=".2"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_guideline"
        app:layout_constraintVertical_bias=".55"
        app:srcCompat="@drawable/products_pic" />

    <ImageButton
        android:id="@+id/button_receipts"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="#FFFFFFFF"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_percent=".2"
        app:layout_constraintHorizontal_bias=".8"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_guideline"
        app:layout_constraintVertical_bias=".55"
        app:srcCompat="@drawable/history_pic" />

    <ImageButton
        android:id="@+id/button_stats"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="#FFFFFFFF"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_percent=".2"
        app:layout_constraintHorizontal_bias=".2"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_guideline"
        app:layout_constraintVertical_bias=".8"
        app:srcCompat="@drawable/stats_pic" />

    <ImageButton
        android:id="@+id/button_info"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="#FFFFFFFF"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_percent=".2"
        app:layout_constraintHorizontal_bias=".8"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_guideline"
        app:layout_constraintVertical_bias=".8"
        app:srcCompat="@drawable/info_pic" />

    <TextView
        android:id="@+id/textView_eparagon"
        android:editable="false"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="eParagon"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="38sp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFFFF"
        app:layout_constraintHeight_percent=".2"
        app:layout_constraintWidth_percent=".8"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_guideline"
        app:layout_constraintVertical_bias=".03"
  />

    <TextView
        android:id="@+id/textView_stats"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="#FFFFFFFF"
        android:gravity="center"
        android:text="Statystyki"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/button_stats"
        app:layout_constraintHeight_percent=".03"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_guideline"
        app:layout_constraintVertical_bias="0.979"
        app:layout_constraintWidth_percent=".2" />

    <TextView
        android:id="@+id/textView_info"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="#FFFFFFFF"
        android:gravity="center"
        android:text="Info"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/button_info"
        app:layout_constraintHeight_percent=".03"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_guideline"
        app:layout_constraintVertical_bias="0.979"
        app:layout_constraintWidth_percent=".2" />

    <TextView
        android:id="@+id/textView_products"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="#FFFFFFFF"
        android:gravity="center"
        android:text="Produkty"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/button_products"
        app:layout_constraintHeight_percent=".03"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_guideline"
        app:layout_constraintVertical_bias="0.978"
        app:layout_constraintWidth_percent=".2" />

    <TextView
        android:id="@+id/textView_receipts"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="#FFFFFFFF"
        android:gravity="center"
        android:text="Paragony"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/button_receipts"
        app:layout_constraintHeight_percent=".03"
        app:layout_constraintHorizontal_bias="0.799"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_guideline"
        app:layout_constraintVertical_bias="0.981"
        app:layout_constraintWidth_percent=".2" />

    <TextView
        android:id="@+id/textView_gallery"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="#FFFFFFFF"
        android:gravity="center"
        android:text="Zrób/wybierz zdjęcie"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/button_gallery"
        app:layout_constraintHeight_percent=".03"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_guideline"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintWidth_percent=".5" />

    <Button
        android:id="@+id/buttonMain_UserInfo"
        android:layout_width="0dp"
        android:layout_height="30sp"
        android:background="@drawable/gradient_button"
        android:fontFamily="@font/cairo"
        android:gravity="center"
        android:text="@string/zaloguj_si"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/button_stats"
        app:layout_constraintVertical_bias="0.895"
        app:layout_constraintWidth_percent=".4" />

    <Button
        android:id="@+id/buttonMain_UserLogout"
        android:layout_width="0dp"
        android:layout_height="30sp"
        android:background="@drawable/gradient_button"
        android:fontFamily="@font/cairo"
        android:gravity="center"
        android:text="@string/wyloguj_si"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/button_stats"
        app:layout_constraintVertical_bias="0.895"
        app:layout_constraintWidth_percent=".4" />

    <Button
        android:id="@+id/buttonMain_UserRegister"
        android:layout_width="0dp"
        android:layout_height="30sp"
        android:background="@drawable/gradient_button"
        android:fontFamily="@font/cairo"
        android:gravity="center"
        android:text="@string/zarejestruj_si"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/button_stats"
        app:layout_constraintVertical_bias="0.895"
        app:layout_constraintWidth_percent=".4" />

    <TextView
        android:id="@+id/textViewMain_Username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:fontFamily="@font/cairo"
        android:gravity="center"
        android:text="@string/username"
        android:textColor="#222"
        android:textSize="15sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/button_stats"
        app:layout_constraintVertical_bias="0.895"
        app:layout_constraintWidth_percent=".4" />

</androidx.constraintlayout.widget.ConstraintLayout>